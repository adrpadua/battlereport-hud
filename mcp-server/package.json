{
  "name": "wh40k-rules-mcp",
  "version": "1.0.0",
  "description": "MCP server providing Warhammer 40k rules data from Wahapedia and BSData",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "wh40k-rules-mcp": "./dist/index.js",
    "wh40k": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "cli": "tsx src/cli/index.ts",
    "scrape": "tsx src/scraper/run-scraper.ts",
    "dry-run": "tsx src/scraper/dry-run.ts",
    "scrape:dry-run": "tsx src/scraper/dry-run.ts",
    "scrape:core": "tsx src/scraper/run-scraper.ts --target core",
    "scrape:factions": "tsx src/scraper/run-scraper.ts --target factions",
    "scrape:units": "tsx src/scraper/run-scraper.ts --target units",
    "scrape:all": "tsx src/scraper/run-scraper.ts --target all",
    "crawl": "tsx src/scraper/crawl-wahapedia.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "ingest": "tsx src/ingestion/run-ingestion.ts",
    "ingest:bsdata": "tsx src/ingestion/ingest-bsdata.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@fastify/cors": "^10.0.0",
    "@inquirer/prompts": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^14.0.2",
    "drizzle-orm": "^0.38.0",
    "fastify": "^5.0.0",
    "pg": "^8.13.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@mendable/firecrawl-js": "^1.0.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "@vitest/coverage-v8": "^4.0.17",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.30.0",
    "fast-xml-parser": "^4.5.3",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.17"
  }
}
