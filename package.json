{
  "name": "battlereport-hud",
  "version": "1.0.0",
  "description": "Chrome Extension that extracts army list information from YouTube Warhammer 40k battle reports",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate:factions && tsc --noEmit && vite build",
    "preview": "vite preview",
    "generate:factions": "tsx scripts/generate-faction-data.ts",
    "generate:stratagems": "tsx scripts/generate-stratagem-data.ts",
    "generate:aliases": "tsx scripts/generate-unit-aliases.ts"
  },
  "dependencies": {
    "fuse.js": "^7.1.0",
    "openai": "^4.104.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.304",
    "@types/pg": "^8.11.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.38.0",
    "pg": "^8.13.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "fast-xml-parser": "^4.5.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vite-plugin-web-extension": "^4.3.1",
    "youtube-transcript": "^1.2.1"
  }
}
